# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration (Supabase)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Plaid Configuration
PLAID_CLIENT_ID=replace-me
PLAID_SECRET=replace-me
PLAID_ENV=sandbox

# API Security
API_SECRET=dev-demo-secret

# Slack Configuration
SLACK_BOT_TOKEN=your_slack_bot_token
SLACK_CHANNEL_ID=your_slack_channel_id

# Check API Configuration
CHECK_API_KEY=your_check_api_key
CHECK_API_URL=https://api.checkhq.com

# Risk Engine Configuration
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
CASH_FLOW_ALERT_DAYS=7

# Job Scheduler Configuration
ENABLE_BACKGROUND_JOBS=true
RISK_CHECK_INTERVAL=0 */6 * * *
DATA_SYNC_INTERVAL=0 2 * * *
